{
    "compilerOptions": {
      "outDir": "dist",
      "module": "CommonJS",
      "target": "ES2019",
      "esModuleInterop": true,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "src",
      "paths": {
        "@/tests/*": ["../tests/*"],
        "@/*": ["*"]
      }
    },
    "include": ["src", "tests"],
}
